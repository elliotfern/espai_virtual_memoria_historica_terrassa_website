{
  "compilerOptions": {
    "module": "ESNext",            // Usar módulos ESNext para importaciones
    "target": "ES2020",            // Establecer el target a ES2020
    "moduleResolution": "node",    // Resolver módulos de acuerdo con Node.js
    "esModuleInterop": true,       // Compatibilidad con CommonJS y ES Modules
    "strict": true,                // Habilitar todas las comprobaciones estrictas
    "allowJs": true,               // Permitir archivos .js
    "outDir": "./dist",            // Directorio de salida para los archivos compilados
    "rootDir": "./src/frontend",   // Directorio raíz de tu código fuente
    "lib": ["es2017", "dom"],      // Incluir las bibliotecas necesarias
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "types": ["leaflet", "leaflet.markercluster"],
    "typeRoots": [
      "node_modules/@types",
      "src/frontend/types",
    ]
  },
  "include": [
    "src/frontend",
    "src/frontend/types/global.d.ts",
    "src/frontend/types",
    "src/frontend/types/vite-env.d.ts",
  ],
  "exclude": ["node_modules"]
}